#include <iostream>
using namespace std;

int main() {
    double a, b, c, x, F;

    cout << "a = "; cin >> a;
    cout << "b = "; cin >> b;
    cout << "c = "; cin >> c;
    cout << "x = "; cin >> x;

    // Спосіб 1: скорочена форма
    if (x < 0 && b != 0)
        F = a - x / (10 + b);
    if (x > 0 && b == 0)
        F = (x - a) / (x - c);
    if (!(x < 0 && b != 0) && !(x > 0 && b == 0))
        F = 3*x+2/c;

    cout << "1) F = " << F << endl;

    // Спосіб 2: повна форма
    if (x < 0 && b != 0)
        F = a - x / (10 + b);
    else if (x > 0 && b == 0)
        F = (x - a) / (x - c);
    else
        F = 3*x+2/c;

    cout << "2) F = " << F << endl;

    return 0;
}
